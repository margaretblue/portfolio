<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <% if policy(post).create? %>
      <tr id="<%= dom_id(post) %>">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <% if policy(post).update? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <% if policy(post).destroy? %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% else post.published? %>
      <tr id="<%= dom_id(post) %>">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <% if policy(post).update? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <% if policy(post).destroy? %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

 <br>
<% if current_user.present? %>
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'View My Posts', showmine_path %>
<% end %>

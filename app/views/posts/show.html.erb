<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<div>
  <ul><strong>Comments:</strong>
  <% @post.comments.each do |comment| %>
    <li><em><%= comment.author %></em> said: <%= comment.content %></li>
  <% end %>
  </ul>
</div>
<% if current_user.present? %>
  <%= render 'comments/form' %>
<% else %>
  Please <%= link_to 'sign in', user_session_path %> or <%= link_to 'sign in with Twitter', user_omniauth_authorize_path(:twitter) %> to comment.<br />
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

